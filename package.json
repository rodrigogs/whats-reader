{
	"name": "whats-reader",
	"productName": "WhatsApp Backup Reader",
	"description": "A desktop app to read and visualize WhatsApp chat exports",
	"version": "1.0.0",
	"type": "module",
	"main": "electron/main.cjs",
	"author": {
		"name": "Rodrigo Gomes da Silva",
		"email": "rodrigo.smscom@gmail.com"
	},
	"license": "AGPL-3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/rodrigogs/whats-reader.git"
	},
	"bugs": {
		"url": "https://github.com/rodrigogs/whats-reader/issues"
	},
	"homepage": "https://github.com/rodrigogs/whats-reader#readme",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"electron": "npm run build && electron .",
		"electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
		"electron:build": "npm run build && electron-builder",
		"electron:build:mac": "npm run build && electron-builder --mac",
		"electron:build:win": "npm run build && electron-builder --win",
		"electron:build:linux": "npm run build && electron-builder --linux",
		"machine-translate": "inlang machine translate --project project.inlang"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@inlang/cli": "^3.0.0",
		"@inlang/paraglide-js": "2.6.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"concurrently": "^9.2.1",
		"electron": "^39.2.5",
		"electron-builder": "^26.0.12",
		"electron-squirrel-startup": "^1.0.1",
		"semantic-release": "^24.2.9",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.2",
		"wait-on": "^9.0.3"
	},
	"build": {
		"appId": "com.whatsapp.backup-reader",
		"productName": "WhatsApp Backup Reader",
		"publish": null,
		"directories": {
			"output": "dist-electron"
		},
		"files": [
			"build/**/*",
			"electron/**/*",
			"static/**/*"
		],
		"mac": {
			"category": "public.app-category.utilities",
			"icon": "static/icon.icns",
			"target": [
				"dmg",
				"zip"
			]
		},
		"win": {
			"icon": "static/icon.ico",
			"target": [
				"nsis",
				"portable"
			]
		},
		"linux": {
			"icon": "static/icon.png",
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	},
	"dependencies": {
		"@floating-ui/dom": "^1.7.4",
		"@huggingface/transformers": "^3.8.1",
		"jszip": "^3.10.1"
	}
}
